@model IEnumerable<TruyumOnline.Models.Items>

@{
    ViewData["Title"] = "Index";
}

<h1>Menu Items</h1>

<p>
    <a asp-action="AddNewItem">Add New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Date of Launch
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                FreeDelivery
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.DateOfLaunch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FreeDelivery)
            </td>
            <td>
                @Html.ActionLink("Edit", "ModifyMenuItemAdmin", new { id = item.ItemId }) |
                @Html.ActionLink("Details", "GetMenuItemAdminById", new { id = item.ItemId }) |
                @Html.ActionLink("Delete", "DeleteMenuItemAdmin", new { id = item.ItemId })
            </td>
        </tr>
}
    </tbody>
</table>
